@model List<DecodeVINViewModel>
@{
    ViewData["Title"] = "_List";
}


<div class="card">
    <div class="card-header">
        <h1 class="model-heading">VIN Results</h1>
    </div>
    <div class="card-body">
        @if (Model?.Count > 0)
        {
            <div class="table-responsive">
                <table id="tbl_results" class="table table-hover table-light">
                    <thead>
                        <tr>
                            <th>
                                Variable
                            </th>
                            <th>
                                Value
                            </th>
                        </tr>
                    </thead>
                    @foreach (var make in Model)
                    {
                        @if (make.Value != string.Empty && make.Value != null && !make.Variable.Contains("Error")) 
                        {
                            <tr class="text-dark">
                                <td>
                                    @make.Variable
                                </td>
                                <td>
                                    @make.Value
                                </td>
                            </tr>
                        }
                    }
                </table>
            </div>

        }
    </div>
</div>

