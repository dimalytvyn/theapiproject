@model List<ModelViewModel>
@{
    ViewData["Title"] = "_List";
}

<h1 class="model-heading">@Html.ViewData["make"].ToString() Models</h1>

@if (Model?.Count > 0)
{
    <div class="table-responsive">
        <table id="tbl_models" class="table table-borderless">
            <thead>
                <tr>
                    <th>
                        Model #
                    </th>
                    <th>
                        Model Name
                    </th>
                </tr>
            </thead>
            @foreach (var _model in Model)
            {
                <tr>
                    <td>
                        @_model.ModelID
                    </td>
                    <td>
                        @_model.ModelName
                    </td>
                </tr>
            }
        </table>
    </div>

}

