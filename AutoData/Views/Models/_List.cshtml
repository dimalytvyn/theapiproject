@model List<ModelViewModel>
@{
    ViewData["Title"] = "_List";
}

<div class="card">
    <div class="card-header">
        <h1 class="model-heading">@Html.ViewData["make"].ToString() Models</h1>
    </div>
    <div class="card-body">
        @if (Model?.Count > 0)
        {
            <div class="table-responsive">
                <table id="tbl_models" class="table table-hover table-light">
                    <thead>
                        <tr>
                            <th>
                                Model #
                            </th>
                            <th>
                                Model Name
                            </th>
                        </tr>
                    </thead>
                    @foreach (var _model in Model)
                    {
                        <tr class="text-dark">
                            <td>
                                @_model.Model_ID
                            </td>
                            <td>
                                @_model.Model_Name
                            </td>
                        </tr>
                    }
                </table>
            </div>

        }
    </div>
</div>



