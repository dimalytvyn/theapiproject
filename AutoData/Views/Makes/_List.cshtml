@model List<MakeViewModel>
@{
    ViewData["Title"] = "_List";
}


<div class="card">
    <div class="card-header">
        <h1 class="model-heading">All Vehicle Makes</h1>
    </div>
    <div class="card-body">
        @if (Model?.Count > 0)
        {
            <div class="table-responsive">
                <table id="tbl_makes" class="table table-hover table-light">
                    <thead>
                        <tr>
                            <th>
                                #
                            </th>
                            <th>
                                Name
                            </th>
                            <th>
                                Action
                            </th>
                        </tr>
                    </thead>
                    @foreach (var make in Model)
                    {
                        <tr class="text-dark">
                            <td>
                                @make.Make_ID
                            </td>
                            <td>
                                @make.Make_Name
                            </td>
                            <td>
                                <a class="btn btn-danger magic-vanishIn" href="/Models/Index/?make=@make.Make_Name">
                                    Models
                                </a>
                            </td>
                        </tr>
                    }
                </table>
            </div>

        }
    </div>
</div>

