@model List<MakeViewModel>
@{
    ViewData["Title"] = "_List";
}

<h1>Makes</h1>
@if (Model?.Count > 0)
{
    <div class="table-responsive">
        <table id="tbl_makes" class="table table-hover table-dark">
            <thead>
                <tr>
                    <th>
                        #
                    </th>
                    <th>
                        Name
                    </th>
                    <th>
                        Action
                    </th>
                </tr>
            </thead>
            @foreach (var make in Model)
            {
                <tr class="text-info">
                    <td>
                        @make.Make_ID
                    </td>
                    <td>
                        @make.Make_Name
                    </td>
                    <td>
                        <button class="btn btn-danger" href="/Models/Index/?make=@make.Make_Name">
                            Models
                        </button>
                    </td>
                </tr>
            }
        </table>
    </div>

}

