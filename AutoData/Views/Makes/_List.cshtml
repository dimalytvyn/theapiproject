@model List<MakeViewModel>
@{
    ViewData["Title"] = "_List";
}

<h1>Makes</h1>
@if (Model?.Count > 0)
{
    <div class="table-responsive">
        <table id="tbl_makes" class="table table-borderless">
            <thead>
                <tr>
                    <th>
                        #
                    </th>
                    <th>
                        Name
                    </th>
                    <th>
                        Action
                    </th>
                </tr>
            </thead>
            @foreach (var make in Model)
            {
                <tr>
                    <td>
                        @make.MakeID
                    </td>
                    <td>
                        @make.MakeName
                    </td>
                    <td>
                        <a href="/Models/Index/?make=@make.MakeName">
                            Models
                        </a>
                    </td>
                </tr>
            }
        </table>
    </div>

}

